#:kivy 1.0.9

<Menu>:
    Widget:
        name: 'menu'
        id: menu
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'assets/images/chalkboard.jpg'
        Label:
            font_size: 60
            center_x: root.width / 2
            top: root.top - 105/6
            text: "Welcome"
        Label:
            font_size: 60
            center_x: root.width / 2
            top: root.top - 105/6 - 80
            text: "to"
        Label:
            font_size: 60
            center_x: root.width / 2
            top: root.top - 105/6 - 160
            text: "DartboardOS!"
        Label:
            font_size: 42
            center_x: root.width / 2
            top: root.top - 105/6 - 260
            text: "Cricket"
        Label:
            font_size: 32
            center_x: root.width / 2
            top: root.top - 490
            text: "vs"

        Button:
            id: player1select
            text: 'Test'
            center_x: root.width / 2
            top: root.top - 400
            size:(160,80)
            on_select:
            #on_press: root.manager.current = 'cricket'
        Button:
            id: player2select
            text: 'Test'
            center_x: root.width / 2
            top: root.top - 600
            size:(160,80)
            on_select:
            # on_press: root.manager.current = 'cricket'
        Button:
            id: start_game
            text: 'Start Game'
            center_x: root.width / 2
            top: root.top - 700
            size:(160,80)
            on_select:
            on_press:
                root.initialize_game()
                root.manager.current = 'cricket'
                root.manager.transition.direction = 'left'


<Cricket>:
