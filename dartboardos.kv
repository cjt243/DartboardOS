#:kivy 1.0.9

<mainMenu>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'chalkboard.jpg'

<dartboardosGame>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'chalkboard.jpg'
        Rectangle:
            pos: self.center_x-60,0
            size: 5, self.height
